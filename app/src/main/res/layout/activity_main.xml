<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Character Selection Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/spamtonButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/spamton" />

        <Button
            android:id="@+id/tennaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tenna" />
    </LinearLayout>

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_enter_text"
        android:inputType="text" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/speak" />

    <!-- Deltarune Text Box Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textbox_background"
        android:padding="20dp">

        <!-- Character Portrait -->
        <ImageView
            android:id="@+id/portraitImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/spamton_portrait"
            tools:ignore="ContentDescription" />

        <!-- Animated Text Output -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/portraitImage"
            android:layout_marginStart="16dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/deltarune_font"
            android:singleLine="false"
            android:ellipsize="none"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="4"
            tools:text="This is where the text will appear, just like in the game!" />

    </RelativeLayout>

    <!-- Video selector (Prev / current name / Next) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/prevVideoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev" />

        <TextView
            android:id="@+id/videoNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="@string/no_videos"
            android:ellipsize="end"
            android:singleLine="true" />

        <Button
            android:id="@+id/nextVideoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next" />

    </LinearLayout>

    <!-- Play Me button (full-screen video) -->
    <Button
        android:id="@+id/playMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/play_me" />

</LinearLayout>
